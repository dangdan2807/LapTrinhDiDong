<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/layoutMain_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Màn hình quản lý"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/layoutMain_btnLayoutA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:text="Layout A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMain_textView" />

    <Button
        android:id="@+id/layoutMain_btnLayoutB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Layout B"
        app:layout_constraintBottom_toBottomOf="@+id/layoutMain_btnLayoutA"
        app:layout_constraintStart_toEndOf="@+id/layoutMain_btnLayoutA" />

    <Button
        android:id="@+id/layoutMain_btnLayoutC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Layout C"
        app:layout_constraintBottom_toBottomOf="@+id/layoutMain_btnLayoutB"
        app:layout_constraintStart_toEndOf="@+id/layoutMain_btnLayoutB" />

    <Button
        android:id="@+id/layoutMain_btnLayoutD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:text="Layout D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMain_btnLayoutA" />

    <Button
        android:id="@+id/layoutMain_btnLayoutE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Layout E"
        app:layout_constraintBottom_toBottomOf="@+id/layoutMain_btnLayoutD"
        app:layout_constraintStart_toEndOf="@+id/layoutMain_btnLayoutD" />

    <Button
        android:id="@+id/layoutMain_btnComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Comment"
        app:layout_constraintBottom_toBottomOf="@+id/layoutMain_btnLayoutE"
        app:layout_constraintStart_toEndOf="@+id/layoutMain_btnLayoutE" />
</androidx.constraintlayout.widget.ConstraintLayout>