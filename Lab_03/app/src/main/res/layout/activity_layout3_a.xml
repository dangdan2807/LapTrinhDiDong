<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4C4C4"
    tools:context=".Layout3A">

    <View
        android:id="@+id/layout3A_view1"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:background="@color/white"
        android:translationZ="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/layout3A_imageBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tiki_book" />

    <TextView
        android:id="@+id/layout3A_tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Nguyên hàm tích phân và ứng dụng"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toTopOf="@+id/layout3A_view1" />

    <TextView
        android:id="@+id/layout3A_tvSupplier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:text="Cung cấp bởi Tiki Trading"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_tvProductName" />

    <TextView
        android:id="@+id/layout3A_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="141.800 đ"
        android:textColor="#EE0D0D"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_tvSupplier" />

    <TextView
        android:id="@+id/layout3A_tvOldPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:text="141.800 đ"
        android:textColor="#808080"
        android:textSize="12dp"
        android:textStyle="bold"

        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_tvPrice" />

    <Button
        android:id="@+id/layout3A_btnBuyLater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:stateListAnimator="@null"
        android:text="Mua sau"
        android:textAllCaps="false"
        android:textColor="#134FEC"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_tvPrice" />

    <Button
        android:id="@+id/layout3A_btnSubtract"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btnminus"
        android:paddingLeft="8dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/layout3A_imageBook"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_tvOldPrice" />

    <Button
        android:id="@+id/layout3A_btnMulti"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="12dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/btnadd"
        android:paddingLeft="8dp"
        android:text="@null"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_tvCountOrder"
        app:layout_constraintStart_toEndOf="@+id/layout3A_tvCountOrder"
        app:layout_constraintTop_toTopOf="@+id/layout3A_tvCountOrder" />

    <TextView
        android:id="@+id/layout3A_tvCountOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_btnSubtract"
        app:layout_constraintStart_toEndOf="@+id/layout3A_btnSubtract"
        app:layout_constraintTop_toTopOf="@+id/layout3A_btnSubtract" />

    <TextView
        android:id="@+id/layout3A_layoutTiki_tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Mã giảm giá đã lưu"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_imageBook" />

    <Button
        android:id="@+id/layout3A_btnSeeHere"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="6dp"
        android:backgroundTint="@color/white"
        android:paddingBottom="0dp"
        android:stateListAnimator="@null"
        android:text="Xem tại đây"
        android:textAllCaps="false"
        android:textColor="#134FEC"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_layoutTiki_tvTotalPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3A_layoutTiki_tvTotalPrice" />

    <Button
        android:id="@+id/layout3A_btnVoucher"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/yellow_block"
        android:stateListAnimator="@null"
        android:text="Mã giảm giá"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:cornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_layoutTiki_tvTotalPrice"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="@color/black"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/layout3A_btnApply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#0A5EB7"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Áp dụng"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_view1"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/layout3A_view2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_view1" />

    <TextView
        android:id="@+id/layout3A_textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Bạn có phiếu quà tặng Tiki/Got it/ Urbox?"
        android:textColor="@color/black"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3A_view2" />

    <Button
        android:id="@+id/layout3A_btnEnterHere"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginEnd="14dp"
        android:backgroundTint="@color/white"
        android:paddingLeft="8dp"
        android:paddingTop="3dp"
        android:paddingRight="8dp"
        android:paddingBottom="0dp"
        android:layout_marginBottom="2dp"
        android:stateListAnimator="@null"
        android:text="Nhập tại đây?"
        android:textAllCaps="false"
        android:textColor="#134FEC"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3A_textView7" />

    <View
        android:id="@+id/layout3A_view3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_view2"
        tools:layout_editor_absoluteX="2dp" />

    <TextView
        android:id="@+id/layout3A_textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Tạm tính"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3A_view3" />

    <TextView
        android:id="@+id/layout3A_tvTempPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="141.800 đ"
        android:textColor="#EE0D0D"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_textView8"
        app:layout_constraintEnd_toEndOf="@+id/layout3A_view3" />

    <View
        android:id="@+id/layout3A_view4"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/layout3A_textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:text="Thành tiền"
        android:textColor="#808080"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3A_view4" />

    <TextView
        android:id="@+id/layout3A_tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="141.800 đ"
        android:textColor="#EE0D0D"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3A_textView9"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/layout3A_btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="TIẾN HÀNH ĐẶT HÀNG"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/bgBtnE53935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3A_textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>