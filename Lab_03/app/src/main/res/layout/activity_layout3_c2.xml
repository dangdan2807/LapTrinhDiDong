<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Layout3_c2">

    <ImageView
        android:id="@+id/layout3C2_imageProduct"
        android:layout_width="114dp"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/vs_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layout3C2_tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Điện Thoại Vsmart Joy 3 \nHàng chính hãng"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/layout3C2_imageProduct"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/layout3C2_tvColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Màu:"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:tag=""
        app:layout_constraintStart_toEndOf="@+id/layout3C2_imageProduct"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_tvProductName" />

    <TextView
        android:id="@+id/layout3C2_tvColorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Xanh Dương"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3C2_tvColorLabel"
        app:layout_constraintStart_toEndOf="@+id/layout3C2_tvColorLabel"
        app:layout_constraintTop_toTopOf="@+id/layout3C2_tvColorLabel" />

    <TextView
        android:id="@+id/layout3C2_tvSupplierLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Cung cấp bởi"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/layout3C2_imageProduct"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_tvColorLabel" />

    <TextView
        android:id="@+id/layout3C2_tvSupplierName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="Tiki Tradding"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/layout3C2_tvSupplierLabel"
        app:layout_constraintStart_toEndOf="@+id/layout3C2_tvSupplierLabel"
        app:layout_constraintTop_toTopOf="@+id/layout3C2_tvSupplierLabel" />

    <TextView
        android:id="@+id/layout3C2_tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="1.790.000 đ"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/layout3C2_imageProduct"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_tvSupplierLabel" />

    <View
        android:id="@+id/layout3C2_view1"
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:background="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/layout3C2_tvChooseColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:text="Chọn một màu bên dưới:"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3C2_view1" />

    <Button
        android:id="@+id/layout3C2_btnAquaColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#C5F1FB"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout3C2_view1" />

    <Button
        android:id="@+id/layout3C2_btnRedColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F30D0D"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_btnAquaColor" />

    <Button
        android:id="@+id/layout3C2_btnBlackColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/black"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_btnRedColor" />

    <Button
        android:id="@+id/layout3C2_btnBlueColor"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#234896"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_btnBlackColor" />

    <Button
        android:id="@+id/layout3C2_btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#7a9bee"
        android:text="Xong"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout3C2_btnBlueColor"
        app:rippleColor="#33AAAAAA"
        app:strokeColor="#7a9bee"
        app:strokeWidth="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>